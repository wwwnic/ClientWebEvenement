@{
    ViewData["Title"] = "Mes événements";
}
<h1>@ViewData["Title"]</h1>

@model MesEvenements

<div class="row">
    <div class="col-md-12" id="menusMesEvens">
        <div class="card">
            <div class="card-header">
                <a class="h2 font-weight-bold text-dark" data-toggle="collapse" href="#presences">
                    Présences
                </a>
            </div>
            <div id="presences" class="collapse show" data-parent="#menusMesEvens">
                <div class="card-body">
                    @if (Model.listePresences.Count != 0)
                    {
                        @foreach (var e in Model.listePresences)
                        {
                        <div class="card">
                            <img class="card-img-top" src="@e.LienImage" alt="Image">
                            <div class="card-header">
                                <h3>@e.NomEvenement</h3>
                            </div>
                            <div class="card-body">
                                <ul>
                                    <li>@e.Location</li>
                                    <li>@e.GetDateFormatée()</li>
                                    <li>@e.Organisateur.NomUtilisateur</li>
                                    <li>@e.Description</li>
                                </ul>
                            </div>
                            <div class="card-footer text-center">
                                <a asp-controller="Evenement" asp-action="@e.IdEvenement" class="btn btn-primary" style="color: white; background-color: rgb(138, 66, 255); border-color: white;">Voir les détails</a>
                            </div>
                        </div>
                        }
                    } 
                    else
                    {
                        <h4>Vous ne participez à aucun événement.</h4>
                    }
                </div>
            </div>
        <div class="card">
            <div class="card-header">
                <a class="h2 font-weight-bold text-dark" data-toggle="collapse" href="#crees">
                    Crées
                </a>
            </div>
            <div id="crees" class="collapse" data-parent="#menusMesEvens">
                <div class="card-body">
                    @if (Model.listeCrees.Count != 0)
                    {
                        @foreach (var e in Model.listeCrees)
                        {
                            <div class="card">
                                <img class="card-img-top" src="@e.LienImage" alt="Image">
                                <div class="card-header">
                                    <h3>@e.NomEvenement</h3>
                                </div>
                                <div class="card-body">
                                    <ul>
                                        <li>@e.Location</li>
                                        <li>@e.GetDateFormatée()</li>
                                        <li>@e.Organisateur.NomUtilisateur</li>
                                        <li>@e.Description</li>
                                    </ul>
                                </div>
                                <div class="card-footer">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalModification">
                                        Modifier/Annuler
                                    </button>

                                    <!-- Dialogue de modification d'événement -->
                                    <div class="modal" id="modalModification">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                            <div class="modal-content">
                                                <!-- Entête -->
                                                <div class="modal-header">
                                                    <h3 class="modal-title">Modifier l'événement</h3>
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                </div>
                                                <!-- Corps -->
                                                <div class="modal-body">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h4>Vous n'avez organisé aucun événement.</h4>
                    }
                    <div class="card-footer">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalCreation">
                            &#43; Nouvel événement
                        </button>

                        <!-- Dialogue de création d'événement -->
                        <div class="modal" id="modalCreation">
                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                <div class="modal-content">
                                    <!-- Entête -->
                                    <div class="modal-header">
                                        <h3 class="modal-title">Créer un nouvel événement</h3>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <!-- Corps -->
                                    <div class="modal-body">
                                        Insérer formulaire ici
                                    </div>
                                    <!-- Pied -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary">Créer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/signalr/signalr.js"></script>