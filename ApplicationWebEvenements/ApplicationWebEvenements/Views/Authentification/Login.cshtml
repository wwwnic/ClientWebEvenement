@{
    ViewData["Title"] = "Connexion";
}

@model Utilisateur

<head>
    <style>
        .wrapper {
            display: grid;
            grid-template-columns: 9fr 10fr 9fr;
        }
    </style>
</head>
<body>
    <div>
        <div class="wrapper">
            <div></div>
            @{ var msg = ViewBag?.messageErreur;
                if (msg == "echec_connexion")
                {
                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                        Nom d'utilisateur ou mot de passe invalide.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                        <span aria-hidden="true">&times;</span>
                    </div> }
            }
            @using (Html.BeginForm())
            {
                <br />
                <h1>Connexion</h1>
                <br />
                <div>
                    <strong>@Html.LabelFor(model => model.NomUtilisateur)</strong>
                    @Html.EditorFor(model => model.NomUtilisateur, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomUtilisateur, "", new { @class = "text-danger" })
                    <br />
                </div>
                <div>
                    <strong>@Html.LabelFor(model => model.MotDePasse)</strong>
                    @Html.PasswordFor(model => model.MotDePasse, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MotDePasse, "", new { @class = "text-danger" })
                    <br />
                </div>
                <br />
                <div class="d-flex justify-content-center">
                    <button asp-controller="Authentification" asp-action="Login" class="btn btn-primary btn-lg center">Connexion</button>
                </div>
            }
        </div>
        <br />
        <br />
        <div class="justify-content-center text-center">
            <h3>Pas de compte?</h3>
            <br />
            <a class="btn btn-primary" asp-controller="Authentification" asp-action="Signup">Créer un compte</a>
        </div>
        <div></div>
    </div>
    </div>
</body>

